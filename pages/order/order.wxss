/* pages/order/order.wxss */
page{
  font-size: 32rpx;
  background-color: #F2F6FC;
}
.info > view {
background-color: #fff;
display: flex;
flex-direction: row;
align-items: center;
justify-content: center;
padding: 20rpx;
line-height: 80rpx;
border-bottom: 1px solid #efefef;
height: 80rpx;
}
.info > view:last-child {
border: none;
}
.fl {
flex: 1;
}.rl {
flex: 1;
text-align: right;
}
.info image {
width: 70rpx;
height: 70rpx;
margin-top: 20rpx;
margin-right: 10rpx;
}
