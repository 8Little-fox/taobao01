/* pages/Detail/detail.wxss */

.action{
  display: flex;
  justify-items: center;
}
.cuIcon-back{
  padding-top: 60rpx;
  
}
.detail-swiper{
  height: 510rpx ;
  width: 100%;
  /* border: 1px solid red; */
}
.detail-swiperimg{
  width: 100%;
}
.detail-price{
    display: flex;
    align-items: center;
}
.detail-sale_price{
  color:orangered;
  font-size: 2.5em;
}
.detail-show_price{
  margin-left: 20rpx;
  color: gray;
  text-decoration: line-through;
}
.detail-txt{
  color: orangered;
  padding-left: 25rpx;
}

.detail-text{
  /* border: 1px solid red; */
  font-size: 1.2em;
  padding: 10rpx;
}
.detail-icon1{
  /* border: 1px solid red; */
  font-size: 25rpx;
}
.detail-icon1{
  display: flex;
  justify-content: space-around;
}
.detail-icon2{
  display: flex;
  align-items: center;
}
.sel{
  width: 100%;
  height: 150rpx;
  border: 5px solid #EBEEF5;
  display: flex;
  align-items: center;
  font-size: 20rpx;
  justify-content:space-between;
}
.sel-pos{
  display: flex;
  align-items: center;
}
.sel-cen{
  /* border: 1px solid red; */
  position: absolute;
  left: 80rpx;
}
.bay-title{
  padding-top: 20rpx;
  font-size: 25rpx;
  display:  flex;
  justify-content: space-between;
}

.sel-sale{
  display: flex;
  flex-direction: column;
}
.bay-list{
  display: flex;
  flex-direction: row;
}
.bay-list>image{
  width: 120rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  margin-left: 10rpx;
  margin-top: 20rpx;
}
/* 底部导航 */
.detail-footer{
  width: 100%;
  size: small;
  padding: 0;
}
/* 购物车 */
.mask-layer {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
.pop-common {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}
.header{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.header >image{
  width: 250rpx;
  height: 250rpx;
  padding: 10rpx;
}
.header-price{
  display: flex;
  flex-direction: column;
}
.header-price :first-child{
  color: orangered;
  font-size: 2.0em;
}
.header-price:nth-child(2){
  color: gray;
  font-size: 20rpx;
}
.header-price:last-child{
  font-size: 25rpx;
  color: #606266;
}
/*  */
.header-con{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.header-con :first-child{
  color: #606266;
  font-size: 20rpx;
}
.header-con :last-child{
  color: orange;
  font-size: 20rpx;
}
/* body */
.body-btn{
  display: flex;
  flex-direction: row;

}
.body-cm{
  color: #606266;
  font-size: 20rpx;
  margin: 10rpx;
}
.body-btn >button{
  width: 50rpx;
  height: 50rpx;
   font-size: 20rpx;
   margin: 10rpx;
   padding: 0.5rpx;
}

/*  */
.body-list{
  display: flex;
  flex-direction: column;
}
.body-item{
  margin: 10rpx;
  padding: 5rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 25rpx;
}
.body-item >image{
  width: 80rpx;
  height: 80rpx;
}
/* 底部 */
.footer-btn{
  background-color: orangered;
  border-radius: 30rpx;
  border: 1px solid orangered;
  color: white;
  height: 70rpx;
  margin: 10rpx;
  line-height: 70rpx;
  
}
/* 购买数量 */
.body-buy{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx;
}